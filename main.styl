			width 100%
			font-size 1.1em
			font-weight 300
			text-align center	
			height 200px
			reverse-incline-content(relative)
			padding 30px 15px
			margin 70px auto
		.qualify
			.qualify-icons
				width 240px
				height 4em
				center-x()
				bottom 20px
				span 
					font-size 4em
					margin 0 20px
		.recommend
			height 360px
			padding 80px 15px
			border-top 2px dashed rosado-claro
			border-bottom 2px dashed rosado-claro
			.icon-star
				enjoy-screen-icons()
				bottom 80px
		.friendships
			height 300px
			margin-top -40px
			margin-bottom -60px
			.icon-lock2
				enjoy-screen-icons()
		-webkit-animation appear-enjoy-container 0.7s linear 1 forwards paused	
		animation appear-enjoy-container 0.7s linear 1 forwards paused
	prefix-encourage-content(-webkit-)
	encourage-content(appear-enjoy-container)
.screen-mail-only
