			height 300px
			font-size 1.1em
			font-weight 300
			text-align center	
			padding 0 15px	
			margin 60px 0
			reverse-incline-content(relative)
			border-bottom 2px dashed blanco
			a 
				feature-btn(blanco)
				center-x()
				bottom 50px
		.invites-a-developer
			border-bottom none
			margin-bottom -100px
		-webkit-animation appear-benefit-container 0.7s linear 1 forwards paused
		animation appear-benefit-container 0.7s linear 1 forwards paused
	prefix-encourage-content(-webkit-)
	encourage-content(appear-benefit-container)
.screen-enjoy-every-day
	background-color blanco
	color plomo
	basic-properties-screen()
	height auto
	padding-top 100px
	place-skewY()
	z-index 8
	> p 
		width 100%
		font-size 1.1em
		font-weight 400
		text-align center
		padding 0 10px
		remove-skewY()
		margin-bottom 100px
	.enjoy-container
		display flex
		flex-wrap wrap
		justify-content center
		.qualify, .recommend, .friendships
