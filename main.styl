@import url(https://fonts.googleapis.com/css?family=Lobster);
@import url(https://fonts.googleapis.com/css?family=Roboto:400,300,500);
rosado = #EC6060
rosado-oscuro = #EA5455
rosado-claro = #FF525F
blanco = #fff
azul = #404875
azul-rgba = rgba(38,47,79,0.8)
plomo = #666
cyan = #00AEC1
cyan-oscuro = #0097a8
negro-rgba = rgba(0, 0, 0, 0.7)
color-github = #333
color-facebook = #3b5999
color-google = #dd4b39
*
	margin 0
	padding 0
	box-sizing border-box
body
	font-family 'Roboto', sans-serif;
center-x()
	position absolute
	left 50%
	-webkit-transform translateX(-50%)
	transform translateX(-50%)
center-y()
	position absolute
	top 50%
	-webkit-transform translateY(-50%)
	transform translateY(-50%)
center-x-and-center-y()
	position absolute
	left 50%
	top: 50%
	-webkit-transform translateX(-50%) translateY(-50%)
	transform translateX(-50%) translateY(-50%)
basic-properties-screen()
	width 100%
	height 500px
	position relative
	left 0
	top 0
basic-properties-content-screen()
	width 220px
	height 300px
	font-size 1.1em
	font-weight 300
	text-align center
properties-icons()
	font-size 5.2em
	bottom 0px
reverse-incline-content(position)
	position position
	left 50%
	top 50%
	-webkit-transform translateX(-50%) translateY(-50%) skewY(8deg)
	transform translateX(-50%) translateY(-50%) skewY(8deg)
feature-btn(color)
	text-decoration none
	width 200px
	color color
	font-size 17px
	font-weight 300
	text-align center
	border 1px solid color
	padding 10px 0
enjoy-screen-icons()
	font-size 4em
	center-x()
	bottom 20px
place-skewY()
	-webkit-transform skewY(-8deg)
	transform skewY(-8deg)
remove-skewY()
	-webkit-transform skewY(8deg)
	transform skewY(8deg)
encourage-content(name)
	@keyframes name
		10%
			left -50%
		40%
			left -10%
		70%
			left 20%
		100%
			left 50%
prefix-encourage-content(prefix)	
	@-prefix-keyframes name
		10%
			left -50%
		40%
			left -10%
		70%
			left 20%
		100%
			left 50%
corners()
	content ''
	width 30px
	height 30px
	background-color transparent
	position absolute
shadow()
	background-color negro-rgba
	width 100%
	height 100vh
	position fixed
	left 0
	top 0
	cursor pointer
btn-login-social(background,color)
	display block
	width 100%
	line-height 40px
	background-color background
	color color
	font-weight 300
	text-align center
	position absolute
	left 0
.menu-for-mobile
	width 100%
	height 55px
	background-color transparent
	color blanco
	border-bottom 2px dashed blanco
	// cambiar a position absolute cuando el usuario esta despues de la primera pantalla
	position fixed
	left 0
	top 0
	z-index 3
	h1
		font-size 2em
		font-family 'Lobster', cursive
		center-x-and-center-y()
	.icon-menu2
		font-size 1.9em 
		color blanco !important
		center-y()
		left 12px
		cursor pointer
	nav
		display none
.screen-logo-and-slogan
	width 100%
	height 100vh
	background-image url(../img/fondo.jpg)
	background-size cover
	background-position center top
	background-attachment fixed
	color blanco
	position relative
	left 0
	top 0
	z-index 1
	.shade-screen-logo-and-slogan
		width 100%
		height 100vh
		background-color azul-rgba
		position relative
		left 0
		top 0
		z-index 2
		.short-slogan
			width 90%
			max-width 700px
			display flex
			flex-wrap wrap
			justify-content center
			font-size 1.6em
			font-weight 400
			center-x()
			top 35%
			position fixed
			p 
				width 100%
				text-align center
			.animated-word-list
				width 100%
				height 32px
				text-align center
				overflow hidden
				ul 
					list-style: none
					li 
						display block
						line-height 32px
						position relative
						top  0
						-webkit-animation 2s types-of-developers infinite linear
						animation 2s types-of-developers infinite linear
					@-webkit-keyframes types-of-developers
						10%, 40%
							top 0px
						50%, 90%
							top -32px	
					@keyframes types-of-developers
						10%, 40%
							top 0px
						50%, 90%
							top -32px				
		a 
			feature-btn(blanco)
			center-x()
			position fixed
			top 70%
.screen-values-your-talent
	background-color blanco
	color plomo
	basic-properties-screen()
	z-index 4
	.values-your-talent 
		basic-properties-content-screen()
		center-x-and-center-y()
		left -50%
		p:nth-of-type(1)
			color rosado-claro
			font-weight 500
		.icon-ruby
			center-x()
			properties-icons()
		-webkit-animation appear-values-your-talent 0.7s linear 1 forwards paused	
		animation appear-values-your-talent 0.7s linear 1 forwards paused
	prefix-encourage-content(-webkit-)
	encourage-content(appear-values-your-talent)
.screen-widolab-is
	background-color rosado-claro
	color blanco
	basic-properties-screen()
	-webkit-transform skewY(-8deg)
	transform skewY(-8deg)
	z-index 5
	.widolab-is 
		basic-properties-content-screen()
		center-x-and-center-y()
		reverse-incline-content(absolute)
		left -50%
		.icon-globe
			center-x()
			properties-icons()
		-webkit-animation appear-widolab-is 0.7s linear 1 forwards paused
		animation appear-widolab-is 0.7s linear 1 forwards paused
	prefix-encourage-content(-webkit-)	
	encourage-content(appear-widolab-is)
	
.screen-how-do-we-do-it
	background-color blanco
	color plomo
	basic-properties-screen()
	place-skewY()
	z-index 6
	.how-do-we-do-it
		basic-properties-content-screen()
		center-x-and-center-y()
		reverse-incline-content(absolute)
		left -50%
		p:nth-of-type(1)
			color rosado-claro
			font-weight 500
			margin-bottom 40px
		a 
			feature-btn(plomo)
			center-x()
			bottom 0
		-webkit-animation appear-how-do-we-do-it 0.7s linear 1 forwards paused	
		animation appear-how-do-we-do-it 0.7s linear 1 forwards paused
	prefix-encourage-content(-webkit-)	
	encourage-content(appear-how-do-we-do-it)
.screen-benefits-of-using-widolab
